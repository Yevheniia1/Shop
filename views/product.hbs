
<div class="row product-cards" id="product">

     <div class="col s12 m6">

       {{#each category}}
          <a href="/products/category/{{this}}">{{this}}</a>
        {{/each}}

        {{> product/slider}}

        {{> button/buy-product}}

        {{#ifAdmin @root.user._id}}
          <a href="/products/{{id}}/edit?allow=true">Редактировать</a>
        {{/ifAdmin}}

    </div>
    <div class="description col s12 m6">
        <h4>Описание</h4>
        <p>{{description}}</p>
    </div>
    
</div>




