<h1>Добавить</h1>

{{#if error}}
   <p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST" enctype="multipart/form-data">

    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Название товара</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" value="{{data.price}}" required min="1">
        <label for="price">Цена товара</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    {{> product/product-categories}}

    <div class="input-field">
        <textarea id="description" name="description" class="materialize-textarea" value="{{data.description}}" required></textarea>
        <label for="description">Описание товара</label>
        <span class="helper-text" data-error="Введите описание"></span>
    </div>

    <div class="file-field input-field">
      <div class="btn">
        <span>Изображение</span>
        <input type="file" id="img" name="img" required multiple>
        <span class="helper-text" data-error="Загрузка до 10 изображений"></span>
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>

    <input type="hidden" name="_csrf" value="{{@root.csrf}}">
    <button class="btn btn-primary" type="submit">Отправить</button>

</form>