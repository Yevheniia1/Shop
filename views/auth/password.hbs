<div class="row">
    <div class="col m6 offset-m3">
        {{#if error}}
            <p class="alert">{{error}}</p>
        {{/if}}
        <h1>Задать пароль</h1>
        <form action="/auth/password" method="POST">

            <div class="input-field">
                <input id="password" name="password" type="password" class="validate" required autocomplete="email">
                <label for="password">Новый пароль</label>
                <span class="helper-text" data-error="Введите новый пароль"></span>
            </div>

            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
            <input type="hidden" name="token" value="{{token}}">
            <input type="hidden" name="userId" value="{{userId}}">

            <button class="btn btn-primary" type="submit">Обновить пароль</button>
        </form>
    </div>
</div>

