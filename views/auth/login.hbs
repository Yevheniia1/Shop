<div class="auth">
    <div class="row">
        <div class="col s12 tabs__wrapper">
            <ul class="tabs">
                <li class="tab col s6"><a href="#login" class="active tab__link">Войти</a></li>
                <li class="tab col s6"><a href="#register" class="tab__link">Регистрация</a></li>
            </ul>
        </div>
        <div id="login" class="col s12">
            {{#if loginError}}
              <p class="message_alert">{{loginError}}</p>
            {{/if}}
            <h1 class="visually-hidden">Войти в магазин</h1>
            <form action="/auth/login" method="POST">

                <div class="input-field input__wrapper">
                    <input id="email" name="email" type="email" class="validate" required autocomplete="email">
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>

                <div class="input-field input__wrapper">
                    <input id="password" autocomplete type="password" name="password" type="text" class="validate" required min="1" >
                    <label for="password">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                <button class="btn button button_accent auth__button" type="submit">Войти</button>
                <p><a href="/auth/reset" class="link_accent">Забыли пароль?</a></p>

            </form>
        </div>
        <div id="register" class="col s12">
            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}
            <h1 class="visually-hidden">Создать аккаунт</h1>
             <form action="/auth/register" method="POST">

                <div class="input-field input__wrapper">
                    <input id="regemail" name="regemail" type="email" class="validate input" required>
                    <label for="regemail">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>

                <div class="input-field input__wrapper">
                    <input id="name" name="name" type="text" class="validate input" required>
                    <label for="name">Ваше имя</label>
                    <span class="helper-text" data-error="Введите имя"></span>
                </div>

                <div class="input-field input__wrapper">
                    <input id="regpassword" autocomplete  type="password" name="regpassword" type="text" class="input validate" required min="1">
                    <label for="regpassword">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <div class="input-field input__wrapper">
                    <input id="confirm" autocomplete type="password" name="confirm" type="text" class="validate input" required>
                    <label for="confirm">Пароль повторно</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>
                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                <button class="btn  button button_accent auth__button" type="submit">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</div>
