<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a href="#login" class="active">Войти</a></li>
                <li class="tab col s6"><a href="#register">Регистрация</a></li>
            </ul>
        </div>
        <div id="login" class="col m6 offset-m3">
            {{#if loginError}}
              <p class="alert">{{loginError}}</p>
            {{/if}}
            <h1>Войти в магазин</h1>
            <form action="/auth/login" method="POST">

                <div class="input-field">
                    <input id="email" name="email" type="email" class="validate" required autocomplete="email">
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>

                <div class="input-field">
                    <input id="password" autocomplete type="password" name="password" type="text" class="validate" required min="1" >
                    <label for="password">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                <button class="btn btn-primary" type="submit">Войти</button>

            </form>
        </div>
        <div id="register" class="col m6 offset-m3">
            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}
            <h1>Создать аккаунт</h1>
             <form action="/auth/register" method="POST">

                <div class="input-field">
                    <input id="regemail" name="regemail" type="email" class="validate" required>
                    <label for="regemail">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>

                <div class="input-field">
                    <input id="name" name="name" type="text" class="validate" required>
                    <label for="name">Ваше имя</label>
                    <span class="helper-text" data-error="Введите имя"></span>
                </div>

                <div class="input-field">
                    <input id="regpassword" autocomplete  type="password" name="regpassword" type="text" class="validate" required min="1">
                    <label for="regpassword">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <div class="input-field">
                    <input id="confirm" autocomplete type="password" name="confirm" type="text" class="validate" required>
                    <label for="confirm">Пароль повторно</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>
                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                <button class="btn btn-primary" type="submit">зарегистрироваться</button>
            </form>
        </div>
    </div>
</div>
