<h1>Корзина</h1>
<div id="cart">
    {{#if products.length}}

    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Цена</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>

            {{#each products}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{quantity}}</td>
                    <td class="currency">{{price}}</td>
                    <td>
                        <button type="button" class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Удалить</button>
                    </td>
                </tr>
            {{/each}}

        </tbody>
    </table>
    <p>Сумма к оплате: <strong class="product__price currency">{{price}}</strong></p>
    <form action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="{{@root.csrf}}">
        <button type="submit" class="btn">Заказать</button>
    </form>
    {{else}}
        <p>Товаров в корзине пока нет</p>
    {{/if}}
</div>