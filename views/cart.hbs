<h1>Корзина</h1>
<div id="cart">
    {{#if products.length}}

    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Цена</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>

            {{#each products}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{quantity}}</td>
                    <td>{{price}}</td>
                    <td>
                        <button type="button" class="btn btn-small js-remove" data-id="{{id}}">Удалить</button>
                    </td>
                </tr>
            {{/each}}

        </tbody>
    </table>
    <p>Сумма к оплате: <strong class="product__price">{{cart.price}}</strong></p>
    {{else}}
        <p>Товаров в корзине пока нет</p>

{{/if}}
</div>